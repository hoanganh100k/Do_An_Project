<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <ImageView
        android:id="@+id/product_image1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@+id/remove_item_btn1"
        app:layout_constraintEnd_toStartOf="@+id/product_price1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/product_title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Áo thun"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/product_price1"
        app:layout_constraintStart_toStartOf="@+id/product_price1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="180.000 VND"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/product_quantity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background"
        android:backgroundTint="#000000"
        android:drawableEnd="@drawable/arrow_drop_down"
        android:drawablePadding="4dp"
        android:padding="3dp"
        android:text="Số lượng: 1"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/remove_item_btn1"
        app:layout_constraintTop_toBottomOf="@+id/product_price1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="153dp" />

    <LinearLayout
        android:id="@+id/remove_item_btn1"
        android:layout_width="395dp"
        android:layout_height="64dp"
        android:background="#ff3030"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/bin"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Xóa sản phẩm"
            android:textColor="#fff" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>